<script type="text/javascript">
    // Initialize Firebase
    var config = {
    };
    firebase.initializeApp(config);
    // FCM 메시지 설정 코드
    var messaging = firebase.messaging();
    messaging.requestPermission()
        .then(function(){
            console.log('메세징 권한 획득');
            return messaging.getToken();
        })
        .then(function(token){
            console.log('fcm token: ', token);
            $.ajax({
                type: "POST",
                url: "/main/updateToken",
                data: token,
                dataType: "TEXT",
                success: function(text){
                    console.log('전송성공');
                },
                error: function(xhr, status, error){
                    console.log(error);
                }
            });
        })
        .catch(function(e){
            console.log('메세징 권한 획득 중 에러', e);
        });

    // 커플요청 이벤트
    function coupleReq_event(){
        if(confirm("요청을 진행하시겠습니까?")){
            console.log(reqCouplePid.value);
            $.ajax({
                type: "POST",
                url: "/main/coupleMsg",
                data: reqCouplePid.value,
                dataType: "TEXT",
                success: function(text){
                    console.log(text);
                    if(text == 1) {
                        alert("자기자신과 커플을 맺을 수는 없습니다.");
                        return false;
                    } else if (text == 2) {
                        alert("해당 유저번호가 존재하지 않습니다.\n유저번호를 다시 확인해 주세요.");
                        return false;
                    } else if (text == 3){
                        alert("상대방이 이미 커플 요청을 받은 상태이거나, 커플 상태입니다.\n유저번호를 다시 확인해 주세요.");
                        return false;
                    } else {
                        alert("요청하였습니다!\n상대방의 요청 수락을 기다려주세요!");
                        window.location.href = '/users/usersetting';
                    }
                },
                error: function(xhr, status, error){
                    console.log(error);
                }
            });
        } else {
            console.log("취소");
            return false;
        }
    }

    // 커플요청취소 이벤트
    function coupleCnl_event(){
        if(confirm("정말 취소하시겠습니까??")){
            console.log(couplePid.value);
            $.ajax({
                type: "POST",
                url: "/main/coupleCnl",
                data: couplePid.value,
                dataType: "TEXT",
                success: function(text){
                    console.log('취소성공');
                    alert("취소하였습니다.");
                    window.location.href = '/users/usersetting';
                },
                error: function(xhr, status, error){
                    console.log(error);
                }
            });
        } else {
            console.log("취소");
            return false;
        }
    }

    // 커플요청수락 이벤트
    function coupleAcpt_event(){
        if(confirm("수락하시겠습니까??")){
            console.log(couplePid.value);
            $.ajax({
                type: "POST",
                url: "/main/coupleAcpt",
                data: couplePid.value,
                dataType: "TEXT",
                success: function(text){
                    console.log('수락성공');
                    alert("커플요청을 수락하였습니다!\n함께 평행일기를 즐겨주시기 바랍니다!");
                    window.location.href = '/main/list';
                },
                error: function(xhr, status, error){
                    console.log(error);
                }
            });
        } else {
            console.log("취소");
            return false;
        }
    }

    // 커플요청거절 이벤트
    function coupleRej_event(){
        if(confirm("정말 거절하시겠습니까??")){
            console.log(couplePid.value);
            $.ajax({
                type: "POST",
                url: "/main/coupleRej",
                data: couplePid.value,
                dataType: "TEXT",
                success: function(text){
                    console.log('거절성공');
                    alert("커플요청을 거절하였습니다\n다시 시작해보세요.");
                    window.location.href = '/users/usersetting';
                },
                error: function(xhr, status, error){
                    console.log(error);
                }
            });
        } else {
            console.log("취소");
            return false;
        }
    }

    // 이별 신청을 막기 위한 눈물겨운 노력
    function brk1() {
        var brk1 = M.Modal.getInstance(coupleBrk1);
        brk1.close();
    }
    function brk2() {
        var brk2 = M.Modal.getInstance(coupleBrk2);
        brk2.close();
    }
    function brk3() {
        var brk3 = M.Modal.getInstance(coupleBrk3);
        brk3.close();
    }
    function brk4() {
        var brk4 = M.Modal.getInstance(coupleBrk4);
        brk4.close();
    }
    function brk5() {
        var brk5 = M.Modal.getInstance(coupleBrk5);
        brk5.close();
    }

    // 이별신청 이벤트
    function coupleBrk() {
        $.ajax({
            type: "POST",
            url: "/users/coupleBrk",
            data: couplePid.value,
            dataType: "TEXT",
            success: function(text){
                console.log('이별');
                alert("이별하셨습니다.");
                window.location.href = '/';
            },
            error: function(xhr, status, error){
                console.log(error);
            }
        });
    }

    $(document).ready(function () {
        $('.modal').modal();
    });
</script>